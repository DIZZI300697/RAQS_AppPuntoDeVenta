<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    android:gravity="center"
    android:padding="30dp">

    <Button
        android:id="@+id/btnGoToSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B56576"
        android:textColor="#FFF8E7"
        android:textSize="17sp"
        android:layout_marginBottom="15dp"
        android:text="Venta" />

    <Button
        android:id="@+id/btnGoToInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6B8E23"
        android:textColor="#F5F5DC"
        android:textSize="17sp"
        android:layout_marginBottom="15dp"
        android:text="Inventario" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2C3E50"
        android:textColor="#FADCD9"
        android:textSize="17sp"
        android:text="Salir" />

</LinearLayout>
